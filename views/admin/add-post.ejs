<div class="container">
    <div class="row justify-content-center ">
        <div class="col-11">
            <div class=" d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
                <h2>Create Post</h2>
            </div>
            <%- include("../includes/errorMessage") %>
                <form class="form-horizontal" action="/dashboard/add-post" method="POST" enctype="multipart/form-data">
                    <div class="form-group row ">
                        <div class="col-8">
                            <label for="title" class="control-label font-weight-bold">Title</label>
                            <input class="form-control" autofocus type="text" name="title" id="title"
                                placeholder="Title">
                        </div>
                        <div class="col-4">
                            <label for="status" class="control-label font-weight-bold">Status</label>
                            <select name="status" class="form-control" id="status">
                                <option value="private" selected>Private</option>
                                <option value="public">Public</option>
                            </select>
                        </div>
                    </div>
                    <!-- <div class="form-group row mt-4 ">
                    <div class="col-2">
                        <div class="input-group">
                            <div class=" input-group-prepend">
                                <button class=" btn btn-outline-secondary" type="button" id="uploadImage">
                                    Upload Image
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="col-10">
                        <div class=" custom-file">
                            <input type="file" class="custom-file-input" id="images">
                            <label for="images" class="custom-file-label" id="imageStatus">Select Image</label>
                        </div>    
                    </div>
                </div> -->
                    <div class="form-group row ">
                        <div class="col">
                            <label for="body" class="control-label font-weight-bold">Body</label>
                            <div class="card card-body">
                                <textarea class="form-control" name="body" id="body"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row ">
                        <div class="col">
                            <label for="thumbnail" class="control-label font-weight-bold">Thumbnail</label>
                            <input class="form-control" type="file" name="thumbnail" id="thumbnail">
                        </div>
                    </div>
                    <div class="form-group row  ">
                        <div class="col">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>
                </form>
        </div>
    </div>
</div>